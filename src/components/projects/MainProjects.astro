---

import githubIcon from "../../assets/icon/github.svg";
import goToIcon from "../../assets/icon/arrow-up-right.svg";

export interface Props {
  name: string;
  url: string;
  image: string;
  github: string;
  description: string;
  techs: string;
}

const { name, image, url, github, description, techs} = Astro.props;

---


        <article class="flex gap-4 flex-col justify-center items-start text-start">
            <header class="inline-flex flex-col sm:flex-row items-start sm:items-center gap-2 sm:gap-4">
                <h3 class="text-2xl">{name}</h3>
            </header>
            <div class="">
                <a class="" target="_blank" href={url}>
                    <img class="w-full h-full rounded-lg max-w-xl transition-all duration-300 hover:brightness-75" src={image} alt="#">
                </a>
            </div>
            <footer class="flex flex-col items-start gap-4
            [&>p]:max-w-lg">
                <p class="text-pretty text-lg lg:text-xl">{description}</p>
                <p class="text-base 2xl:text-lg">Las tecnolog√≠as utilizadas fueron: <span class="text-[#ba5bff]">{techs}</span>.</p>
                <div class="flex flex-row gap-2 justify-center items-center [&>A]:border-2 [&>A]:border-[#ffffff5c] hover:[&>A]:border-[#c140ff5e] [&>A]:rounded-lg [&>A]:px-3 [&>A]:py-2 [&>A]:transition-colors [&>A]:duration-500 hover:[&>A]:bg-[#2f037738]">
                    <a href={url} class="noiseEffect" target="_blank"><img class="w-5 h-6" src={goToIcon?.src} alt=""></a>
                    <a href={github} class="noiseEffect" target="_blank"><img class="w-5 h-6" src={githubIcon?.src} alt=""></a>
                </div>
            </footer>
        </article>


        <style>
            .noiseEffect{
                background-image:  linear-gradient(rgb(0 0 0 / 25%), rgb(0 0 0 / 14%)), url(data:image/png;base64,)
            }

                
        </style>