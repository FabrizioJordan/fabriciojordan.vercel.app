---
import certificadoJAPImg from '@assets/img/curses/certificadoJAP.jpeg';
import certificadoEmpleabilidadImg from '@assets/img/curses/certificadoEmpleabilidad.png';

import MainCurses from "@components/curses/MainCurses.astro";
---
<section class="flex flex-col gap-8">

    <article class="flex justify-between items-end">
        <h1 class="text-4xl sm:text-5xl font-bold">Mis Cursos</h1>

        <a href="./" class="text-[#9f968a] hover:text-[#ffffff]">Volver</a>
    </article>

    
    <section class="flex flex-col gap-12">

        <MainCurses title="Curso INEFOP - Empleabilidad" img={certificadoEmpleabilidadImg?.src} link={certificadoEmpleabilidadImg?.src} description="Curso de INEFOP de Habilidades Digitales para la Empleabilidad." />

        <MainCurses title="Curso Jóvenes a Programar" img={certificadoJAPImg?.src} link={certificadoJAPImg?.src} description="Curso de Introducción a la Programación en Ciencias de la Computación de CEIBAL - Jóvenes a Programar." />

    </section>

</section>