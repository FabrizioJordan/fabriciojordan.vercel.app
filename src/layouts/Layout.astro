---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

import icon from "../assets/icon/icon1.svg";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Portafolio personal de Fabricio JordÃ¡n, programador front-end." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={icon.src} />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body id="body" class=" bg-[radial-gradient(circle_farthest-side,rgba(255,0,182,.15),rgba(255,255,255,0))]">
    <div class="max-w-5xl m-auto p-4 flex gap-28 flex-col justify-center items-center">
      <Header />
      <slot />
      <Footer />
    </div>
    <div id="blob1"></div>
    <div id="blob2"></div>
<div id="noiseLayer"></div><svg viewBox="0 0 500 500" preserveAspectRatio="none" xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <filter id="noiseFilter">
    <feTurbulence type="fractalNoise" baseFrequency=".75" numOctaves="2" stitchTiles="stitch"></feTurbulence>
  </filter>
</svg>
  </body>
</html>


<style is:global>
  :root {
    color-scheme: light dark;
  }
  html {
    font-family: system-ui, sans-serif;
  }

  body {
    background-image: radial-gradient(circle farthest-side, rgb(255 0 182 / 16%), rgb(255 18 158 / 3%));
  }

  #blob1{
    width: 125vw;
    height: 50vw;
    border-radius: 75% 90%;
    background-color: rgba(143, 108, 159, 0.03);
    transform: rotate(19deg);
    filter: blur(8px);
    mix-blend-mode: soft-light;
    position: fixed;
    top: 25vh;
    left: -15vw;
    z-index: -1;
  }
  #blob2{
    width: 125vw;
    height: 88vw;
    border-radius: 38% 31%;
    background-color: rgb(159 108 122 / 3%);
    transform: rotate(19deg);
    filter: blur(12px);
    mix-blend-mode: overlay;
    position: fixed;
    top: 9vh;
    left: -15vw;
    z-index: -1;
  }

  #noiseLayer{
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    filter: url(#noiseFilter) brightness(0.1) contrast(1.1);
    mix-blend-mode: overlay;
    z-index: -2;
    pointer-events: none;
  }

</style>
